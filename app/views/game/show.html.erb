<div id="game">
  <div id="score_board">
    <div id="team_one_board">
      <h2>Team One</h2>
      <div class="score"><%= @team_one_score %></div>
      <ul>
      <% @game.team_one_array.each_with_index do |member, index| %>
        <% if @round == index %>
          <li class="active"><%= member %></li>
        <% else %>
          <li><%= member %></li>
        <% end %>
      <% end %>
      </ul>
      <%= form_tag ("/game/update") do %>
        <input name="team_one_score" id="team_one" value=true hidden>
        <button id="teamOneWin" hidden>Win!</button>
      <% end %>
    </div>
    <div id="score_board_center">
      <%= content_tag "span", id: "timer", data: {time: 5} do %>00:00<% end %><br>
      <button id="start">Start</button>
      <button id="finish" hidden>Finish</button>
    </div>
    <div id="team_two_board">
      <h2>Team Two</h2>
      <div class="score"><%= @team_two_score %></div>
      <ul>
      <% @game.team_two_array.each_with_index do |member, index| %>
        <% if @round == index %>
          <li class="active"><%= member %></li>
        <% else %>
          <li><%= member %></li>
        <% end %>
      <% end %>
      </ul>
      <%= form_tag ("/game/update") do %>
        <input name="team_two_score" id="team_two" value=true hidden>
        <button id="teamTwoWin" hidden>Win!</button>
      <% end %>
    </div>
  </div>
  <div id="questions" hidden>
